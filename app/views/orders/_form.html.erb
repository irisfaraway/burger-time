<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div class="row">
      <div id="error_explanation" class="small-12 medium-10 large-8">
        <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

        <ul>
        <% @order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<div class="row">
  <div class="small-12 medium-10 large-8">
    <div class="field">
      <%= f.label :eater %><br>
      <%= f.text_field :eater %>
    </div>
    <div class="field">
      <%= f.label :order_date %><br>
      <%= f.date_select :order_date %>
    </div>
    <div class="field">
      <%= f.label :burger_ids, 'Burgers' %>
      <%= f.collection_select(:burger_ids, Burger.all, :id, :name, {include_blank: 'Pick a burger'}) %>
    </div>
    <div class="field">
        <%= f.radio_button :size, 'single', :checked => true %> 
        <%= f.label :size, 'Single', :value => 'single' %>
        <%= f.radio_button :size, 'double' %> 
        <%= f.label :size, 'Double', :value => 'double' %>
    </div>
    <div class="field">
      <%= f.label :filling_ids, 'Extra fillings' %>
      <%= f.collection_check_boxes(:filling_ids, Filling.all, :id, :name) %>
    </div>
    <div class="field">
      <%= f.label :comment, 'Additional comments' %><br>
      <%= f.text_field :comment, :placeholder => 'e.g. no onions' %>
    </div>
    <div class="field">
      <%= f.label :side_ids, 'Sides' %>
      <%= f.collection_check_boxes(:side_ids, Side.all, :id, :name) %>
    </div>
    <div class="field">
      <%= f.label :dip_ids, 'Dips' %>
      <%= f.collection_check_boxes(:dip_ids, Dip.all, :id, :name) %>
    </div>
    <div class="field">
      <%= f.label :paid %><br>
      <%= f.check_box :paid %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
</div>
<% end %>