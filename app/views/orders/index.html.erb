<div class="row">
  <div class="small-12 columns">
    <h1>Listing Orders</h1>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <table>
      <thead>
        <tr>
          <th>Eater</th>
          <th>Order date</th>
          <th>Burger</th>
          <th>Sides &amp; Dips</th>
          <th>Order price</th>
          <th>Paid</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.eater %></td>
            <td><%= order.order_date.to_formatted_s(:ddmy) %></td>
            <td>
              <% unless order.burgers.empty? %>
                  <% order.burgers.each do |burger| %>
                    <%= burger.name %> – <%= order.size %>
                  <% end %>
              <% else %>
                No burgers
              <% end %>
              <% unless order.fillings.empty? && order.comment.blank? %>
                <ul>
                  <% order.fillings.each do |filling| %>
                    <li>with <%= filling.name %></li>
                  <% end %>
                  <% unless order.comment.blank? %>
                    <li><%= order.comment %></li>
                  <% end %>
                </ul>
              <% end %>
            </td>
            <td>
              <% unless order.sides.empty? && order.dips.empty? %>
                <ul>
                  <% order.sides.each do |side| %>
                    <li><%= side.name %></li>
                  <% end %>
                  <% order.dips.each do |dip| %>
                    <li><%= dip.name %></li>
                  <% end %>
                </ul>
              <% else %>
                No sides or dips
              <% end %>
            </td>
            <td><% if order.order_price.nil? %>
                -
              <% else %>
                £<%= number_with_precision(order.order_price, :precision => 2) %>
              <% end %>
            </td>
            <td><%= order.paid %></td>
            <td><%= link_to 'Show', order, class: 'button radius tiny info' %></td>
            <td><%= link_to 'Edit', edit_order_path(order), class: 'button radius tiny success' %></td>
            <td><%= link_to 'Destroy', order, method: :delete, class: 'button radius tiny alert', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <%= link_to 'New Order', new_order_path, class: 'button radius success' %>
  </div>
</div>
