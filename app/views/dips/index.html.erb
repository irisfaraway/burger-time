<div class="row">
  <div class="small-12 columns">
    <h1>Listing Dips</h1>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Spicy</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @dips.each do |dip| %>
          <tr>
            <td><%= dip.name %></td>
            <td><%= dip.spicy %></td>
            <td>Â£<%= number_with_precision(dip.price, :precision => 2) %></td>
            <td><%= link_to 'Show', dip, class: 'button radius tiny info' %></td>
            <td><%= link_to 'Edit', edit_dip_path(dip), class: 'button radius tiny success' %></td>
            <td><%= link_to 'Destroy', dip, method: :delete, class: 'button radius tiny alert', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <%= link_to 'New Dip', new_dip_path, class: 'button radius success' %>
  </div>
</div>
