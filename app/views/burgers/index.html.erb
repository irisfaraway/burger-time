<div class="row">
  <div class="small-12 columns">
    <h1>Listing Burgers</h1>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Spicy</th>
          <th>Price (single)</th>
          <th>Price (double)</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @burgers.each do |burger| %>
          <tr>
            <td><%= burger.name %></td>
            <td><%= burger.description %></td>
            <td><%= burger.spicy %></td>
            <td>£<%= number_with_precision(burger.price_single, :precision => 2) %></td>
            <td>£<%= number_with_precision(burger.price_double, :precision => 2) %></td>
            <td><%= link_to 'Show', burger, class: 'button radius tiny info' %></td>
            <td><%= link_to 'Edit', edit_burger_path(burger), class: 'button radius tiny success' %></td>
            <td><%= link_to 'Destroy', burger, method: :delete, class: 'button radius tiny alert', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <%= link_to 'New Burger', new_burger_path, class: 'button radius success' %>
  </div>
</div>
