<div class="row">
  <div class="small-12 columns">
    <h1>Listing Users</h1>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <table>
      <thead>
        <tr>
          <th>Username</th>
          <th>Display name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.display_name %></td>
            <td><%= link_to 'Show', user, class: 'button radius tiny info' %></td>
            <td><%= link_to 'Edit', edit_user_path(user), class: 'button radius tiny success' %></td>
            <td><%= link_to 'Destroy', user, method: :delete, class: 'button radius tiny alert', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <%= link_to 'New User', new_user_path, class: 'button radius success' %>
  </div>
</div>