<div class="row">
  <div class="small-12 columns">
    <h1>Listing Sides</h1>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Spicy</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @sides.each do |side| %>
          <tr>
            <td><%= side.name %></td>
            <td><%= side.description %></td>
            <td><%= side.spicy %></td>
            <td>Â£<%= number_with_precision(side.price, :precision => 2) %></td>
            <td><%= link_to 'Show', side, class: 'button radius tiny info' %></td>
            <td><%= link_to 'Edit', edit_side_path(side), class: 'button radius tiny success' %></td>
            <td><%= link_to 'Destroy', side, method: :delete, class: 'button radius tiny alert', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <%= link_to 'New Side', new_side_path, class: 'button radius success' %>
  </div>
</div>
