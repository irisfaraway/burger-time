<div class="row">
  <div class="small-12 columns">
    <h1>Listing Drinks</h1>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @drinks.each do |drink| %>
          <tr>
            <td><%= drink.name %></td>
            <td>Â£<%= number_with_precision(drink.price, :precision => 2) %></td>
            <td><%= link_to 'Show', drink, class: 'button radius tiny info' %></td>
            <td><%= link_to 'Edit', edit_drink_path(drink), class: 'button radius tiny success' %></td>
            <td><%= link_to 'Destroy', drink, method: :delete, class: 'button radius tiny alert', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <%= link_to 'New Drink', new_drink_path, class: 'button radius success' %>
  </div>
</div>
